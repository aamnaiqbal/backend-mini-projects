<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-gray-100">
      <div class="form py-12 mx-8">
        <form action="/create" method="post">
          <input
            type="text"
            name="title"
            placeholder="Enter title..."
            class="block w-full border py-2 px-5 rounded-lg outline-none"
          />
          <textarea
            placeholder="Enter task details..."
            name="details"
            class="block w-full border py-2 px-5 rounded-lg resize-none mt-2 outline-none"
          ></textarea>
          <button
            type="submit"
            class="block bg-blue-500 text-white mt-2 p-2 rounded-lg"
          >
            Create Task
          </button>
        </form>
      </div>
      <div class="tasks py-12 mx-8 flex gap-4 flex-wrap items-center">
        <% if(files.length>0){%> <% files.forEach((file)=>{%>
        <div class="task min-w-72 bg-white p-4 rounded-lg shadow-md mb-4">
          <h3 class="font-bold"><%= file %></h3>
          <div class="flex justify-between items-center mt-2">
            <a
              href="/files/<%= file %>"
              class="text-blue-500 hover:underline block"
            >
              Read More
            </a>
            <a
              href="/edit/<%= file %>"
              class="text-blue-500 hover:underline block"
            >
              Edit filename
            </a>
          </div>
        </div>
        <%}) %> <%} else{ %>
        <p class="text-gray-600 text-2xl">No tasks yet</p>
        <% }%>
      </div>
    </div>
  </body>
</html>
