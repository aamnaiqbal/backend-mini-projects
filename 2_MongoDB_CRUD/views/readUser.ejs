<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="w-full min-h-screen border-gray-900 p-10">
      <a href="/" class="text-blue-500 mb-10 italic hover:underline"
        >Back to create users</a
      >
      <h2 class="text-2xl font-semibold mb-4">All Users</h2>
      <div class="flex flex-row items-center flex-wrap justify-start gap-4">
        <% if(users.length>0) { %> <% users.forEach(user => { %>
        <div class="w-72 border border-gray-300 p-4 rounded-md">
          <div class="w-full h-52 rounded-md">
            <img
              src="<%= user.imageUrl %>"
              alt="User Image"
              class="w-full h-full object-cover rounded-md"
            />
          </div>
          <p class="font-semibold mt-2"><%= user.name %></p>
          <p class="text-gray-600 mt-2 italic text-grey-500">
            <%= user.email %>
          </p>
          <div class="flex justify-between mt-2 gap-4">
            <a
              class="text-blue-500 p-1 rounded-md"
              href="/edit/<%= user._id %>"
            >
              Edit User
            </a>
            <a
              class="text-red-500 p-1 rounded-md"
              href="/delete/<%= user._id %>"
            >
              Delete User
            </a>
          </div>
        </div>
        <% }) %> <% } else { %>
        <p class="text-gray-500 text-xl">No Users</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
